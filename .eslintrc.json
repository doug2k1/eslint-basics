{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
      "eslint:recommended",
      "crockford"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": "off",
        "one-var": "off"
    }
}
